!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link{:href => "http://s3.amazonaws.com/codecademy-content/projects/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Roboto:400,500,300", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .header
      .container
        = link_to root_path do
          = image_tag image_path('it-printing.png')
        .nav.pull-right
          - if current_user
            %ul
              %li= current_user.email
              %li= link_to "Log out", logout_path, method: "delete"
          - else
            %ul
              %li= link_to "Login", 'login'
              %li= link_to "Signup", 'signup'
    = yield
